		{
			"name": "Get all tools",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const response = pm.response.json();\r",
							"const tools = response.filter((tool) => tool.inStock === true);\r",
							"\r",
							"const tool = tools[0];\r",
							"\r",
							"if (tool) {\r",
							"pm.globals.set(\"toolId\", tools[0].id);\r",
							"}\r",
							"\r",
							"pm.test(\"Tool found\", () => {\r",
							"    pm.expect(tool).to.be.an('object');\r",
							"    pm.expect(tool.inStock).to.eql(true);\r",
							"    pm.expect(tool.category).to.eql(pm.collectionVariables.get(\"category\"));\r",
							"    pm.expect(tool.inStock).to.be.true;\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/tools?category={{category}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"tools"
					],
					"query": [
						{
							"key": "category",
							"value": "power-tools",
							"description": "ladders, plumbing, power-tools, trailers, electric-generators, lawn-care.",
							"disabled": true
						},
						{
							"key": "category",
							"value": "{{category}}",
							"description": "ladders, plumbing, power-tools, trailers, electric-generators, lawn-care."
						},
						{
							"key": "results",
							"value": "",
							"description": "Must be number between 1 and 20.",
							"disabled": true
						},
						{
							"key": "available",
							"value": "true",
							"description": "boolean",
							"disabled": true
						}
					]
				},
				"description": "Returns a list of tools from the inventory."
			},
			"response": []
		},
		{
			"name": "Get a single tool",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Check tool in-stock\", () => {\r",
							"    const response = pm.response.json();\r",
							"    pm.expect(response.id).to.eql(pm.globals.get(\"toolId\"));\r",
							"    pm.expect(response[\"current-stock\"]).to.be.above(0);\r",
							"});\r",
							"\r",
							"postman.setNextRequest(\"Create a new order\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/tools/:toolId",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"tools",
						":toolId"
					],
					"query": [
						{
							"key": "user-manual",
							"value": "true",
							"description": "boolean",
							"disabled": true
						}
					],
					"variable": [
						{
							"key": "toolId",
							"value": "{{toolId}}"
						}
					]
				},
				"description": "Returns a single tool from the inventory."
			},
			"response": []
		},
